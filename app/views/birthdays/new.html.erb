<div class="birthday-box">
	You are signed in as <%= @user.email %>
	<h1>Create a New Birthday!</h1>
	
	<%= form_for @birthday, url: birthdays_path, method: 'post', :html => { :multipart => true } do |f| %>
	<div class="form-group">
		<%= f.label :name %><br>
		<%= f.text_field :name, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :day %><br>
		<%= f.date_field :day, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label "Wishers (comma-separated email list)" %><br>
		<%= text_area_tag :recipients, nil, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label "Background Image" %><br>
		<%= f.file_field :background %>
	</div>
	<div class="form-group">
		<%= f.label "Profile Image" %><br>
		<%= f.file_field :profile %>
	</div>
	
	<%= f.submit 'Create!', class: 'btn btn-primary' %>
	<% end %>
	<%= link_to 'Log Out', destroy_user_session_path, method: 'delete' %>
</div>