
<div class="birthday-box">
	You are signed in as <%= current_user.email %>
	<h1>Invite More Wishers!</h1>
	
	<%= form_tag "/birthdays/#{@birthday.id}/mail" do |f| %>
	<div class="form-group">
		<%= label_tag "Wishers (comma-separated email list)" %><br>
		<%= text_area_tag :recipients, nil, class: 'form-control' %>
	</div>
	
	<%= submit_tag 'Invite!', class: 'btn btn-primary' %>
	<% end %>
	<%= link_to 'Log Out', destroy_user_session_path, method: 'delete' %>
</div>