<!-- "col-md-6 col-lg-offset-1 col-lg-5" -->
<% @birthdays.each_with_index do |birthday, index| %>
<div class=<%= @columns[index] %>>
	<!-- <div class="col-lg-3 col-md-4 col-sm-6 col-xs-6"> -->
	<a href=<%= "/birthdays/#{birthday.id}" %>>
		<div class="birthday-person">
			<%= image_tag birthday.profile_url.to_s %>
			<div class="overlay"></div>
			<div class="text"><%= birthday.name.upcase %></div>
		</div>
	</a>
	<% if user_signed_in? && current_user.role == "admin" %>
	<div class="center">
		<%= link_to 'Edit', edit_birthday_path(birthday), class: 'btn btn-info' %>
		<%= link_to 'Delete', birthday, method: 'delete', class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %>
		<%= link_to 'Mail', "/birthdays/#{birthday.id}/mail", class: 'btn btn-success' %>
	</div>
	<% end %>
	
</div>
<% end %>