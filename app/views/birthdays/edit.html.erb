<div class="birthday-box">
	<h1>Editing Birthday</h1>
	
	<%= form_for @birthday, :html => { :multipart => true } do |f| %>
	<div class="form-group">
		<%= f.label :name %><br>
		<%= f.text_field :name, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :day %><br>
		<%= f.date_field :day, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :age %><br>
		<%= f.number_field :age, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label "Background Image" %><br>
		<%= f.file_field :background %>
	</div>
	<div class="form-group">
		<%= f.label "Profile Image" %><br>
		<%= f.file_field :profile %>
	</div>
	<div class="form-group">
		<%= label_tag "Font color (hex without #)" %><br>
		<%= f.text_field :font_color, class: 'form-control' %>
	</div>
	
	<%= f.submit 'Update!', class: 'btn btn-primary' %>
<% end %>
</div>